<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp">

        <!-- LOGO como texto (Poppins) -->
        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/logo_wordmark"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.08"
            android:textColor="@android:color/black" />

        <!-- Search -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilSearch"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:startIconDrawable="@drawable/ic_search"
            app:endIconMode="custom"
            app:endIconDrawable="@drawable/ic_mic"
            app:boxBackgroundColor="#F0F0F0"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="24dp"
            app:boxCornerRadiusTopEnd="24dp"
            app:boxCornerRadiusBottomStart="24dp"
            app:boxCornerRadiusBottomEnd="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/search"
                android:textSize="16sp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/poppins_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Tabs: All / Favorites / Tagged -->
        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tabsToggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabAll"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/tab_all"
                android:textSize="14sp"
                android:checkable="true"
                android:checked="true"
                app:cornerRadius="20dp"
                app:strokeColor="#E9E7EE" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabFavorites"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/tab_favorites"
                android:textSize="14sp"
                android:checkable="true"
                app:cornerRadius="20dp"
                app:strokeColor="#E9E7EE" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tabTagged"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="@string/tab_tagged"
                android:textSize="14sp"
                android:checkable="true"
                app:cornerRadius="20dp"
                app:strokeColor="#E9E7EE" />
        </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- LISTADO (4 tarjetas estáticas para replicar el mock) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Item 1 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E5E5"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bogotá, Colombia"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="March 2025"
                            android:textSize="14sp"
                            android:textColor="#90939A"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/place_image"
                        android:scaleType="centerInside"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                        app:srcCompat="@drawable/ic_image_placeholder"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E5E5E5" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 2 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E5E5"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tunja, Colombia"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="January 2025"
                            android:textSize="14sp"
                            android:textColor="#90939A"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/place_image"
                        android:scaleType="centerInside"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                        app:srcCompat="@drawable/ic_image_placeholder"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E5E5E5" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 3 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E5E5"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sao Paulo, Brasil"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="November 2024"
                            android:textSize="14sp"
                            android:textColor="#90939A"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/place_image"
                        android:scaleType="centerInside"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                        app:srcCompat="@drawable/ic_image_placeholder"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E5E5E5" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Item 4 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginBottom="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E5E5E5"
                app:cardCornerRadius="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Washington D.C., USA"
                            android:textSize="20sp"
                            android:textColor="@android:color/black"
                            android:fontFamily="@font/poppins_semibold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="October 2024"
                            android:textSize="14sp"
                            android:textColor="#90939A"
                            android:fontFamily="@font/poppins_regular" />
                    </LinearLayout>

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:contentDescription="@string/place_image"
                        android:scaleType="centerInside"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                        app:srcCompat="@drawable/ic_image_placeholder"
                        app:strokeWidth="2dp"
                        app:strokeColor="#E5E5E5" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Botón Back -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:text="@string/back"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:strokeColor="#D8D6DC" />
    </LinearLayout>
</ScrollView>
