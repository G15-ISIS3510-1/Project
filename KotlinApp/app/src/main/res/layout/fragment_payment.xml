<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:paddingBottom="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Logo como texto (Poppins) -->
        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/logo_wordmark"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.08"
            android:textColor="@android:color/black" />

        <!-- Espacio grande superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <!-- Botón Settings -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSettings"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/settings"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#D8D6DC" />

        <!-- Separación -->
        <View
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <!-- Botón Inbox -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnInbox"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/inbox"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_mail"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#D8D6DC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <!-- Botón Currency -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCurrency"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/currency"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_currency_pound"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#D8D6DC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <!-- Botón Legal -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLegal"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/legal"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_info"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#D8D6DC" />

        <View
            android:layout_width="match_parent"
            android:layout_height="22dp" />

        <!-- Botón Payment Analytics -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPaymentAnalytics"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Payment Analytics"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="#D8D6DC" />

        <!-- Mucho espacio hasta la versión (como en el mock) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Versión abajo a la izquierda -->
        <TextView
            android:id="@+id/tvVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v.3686.1000"
            android:textSize="14sp"
            android:textColor="#9AA0A6"
            android:fontFamily="@font/poppins_regular" />

    </LinearLayout>
</ScrollView>
