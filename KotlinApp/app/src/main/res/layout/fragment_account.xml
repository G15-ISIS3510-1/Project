<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp">

        <!-- LOGO como TEXTO (Poppins) -->
        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="QOVO"
            android:textSize="32sp"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0.08"
            android:textColor="?attr/colorOnSurface"
            tools:ignore="SmallSp" />

        <!-- Divider superior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:background="?attr/colorOutline" />

        <!-- Fila perfil (texto + avatar bordeado) -->
        <LinearLayout
            android:id="@+id/rowProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Datos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juan Pablo Baron"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="3152403373"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/colorOnSurfaceVariant" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="juanpa.baron18@gmail.com"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- Avatar con borde grueso y esquinas redondeadas -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivAvatar"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="12dp"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_avatar_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
                app:strokeWidth="4dp"
                app:strokeColor="?attr/colorOutline" />
        </LinearLayout>

        <!-- ESPACIO -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Botón: Add Car -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddCar"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:text="@string/add_car"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:icon="@drawable/ic_car"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="?attr/colorOutline"
            app:cornerRadius="16dp" />

        <!-- Botón: Visited Places -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVisitedPlaces"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/visited_places"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:icon="@drawable/ic_place"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="?attr/colorOutline"
            app:cornerRadius="16dp" />

        <!-- Botón: Communications -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCommunications"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/communications"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:icon="@drawable/ic_notifications"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="?attr/colorOutline"
            app:cornerRadius="16dp" />

        <!-- Botón: Payment -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPayment"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@string/payment"
            android:textSize="18sp"
            android:fontFamily="@font/poppins_semibold"
            app:icon="@drawable/ic_payment"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:strokeColor="?attr/colorOutline"
            app:cornerRadius="16dp" />

        <!-- Divider inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:background="?attr/colorOutline" />

        <!-- Botón: Switch Account (outline gris) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSwitchAccount"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/switch_account"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            app:strokeColor="?attr/colorOutlineVariant"
            app:cornerRadius="16dp" />

        <!-- Botón: Sign Out (outline rojo) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignOut"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/sign_out"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="?attr/colorError"
            app:strokeColor="?attr/colorError"
            app:cornerRadius="16dp" />

        <!-- Botón: Go Back (outline gris) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoBack"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:text="@string/go_back"
            android:textSize="15sp"
            android:fontFamily="@font/poppins_semibold"
            app:strokeColor="?attr/colorOutlineVariant"
            app:cornerRadius="16dp" />

        <androidx.compose.ui.platform.ComposeView
            android:id="@+id/bottomBarCompose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>
</ScrollView>

